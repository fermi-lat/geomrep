package geomrep

use geometry v1
use graphics v1

include_path "${GEOMREPROOT}"

macro   geomrep_linkopts "-L ${GEOMREPROOT}/${CMTCONFIG} -lgeomrep"\
        VisualC ""


macro_append Win32Debug   " ${GEOMREPROOT}/${DebugDir}/geomreplib.lib"
macro_append Win32Release " ${GEOMREPROOT}/${ReleaseDir}/geomreplib.lib"

path_append LD_LIBRARY_PATH "${GEOMREPROOT}/${CMTCONFIG}"

private

library geomrep -no_share *.cxx\
    ../geomrep/*.h

